@model OnlineStore.Models.Product

<h1>Редактирай продукт</h1>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label asp-for="Name">Име:</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Description">Описание:</label>
        <input asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Price">Цена:</label>
        <input asp-for="Price" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="CategoryId">Категория:</label>
        <select asp-for="CategoryId" class="form-control">
            <option value="">-- Изберете категория --</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.Id" selected="@(category.Id == Model.CategoryId ? "selected" : null)">
                    @category.Name
                </option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div>
        <button type="submit">Запази промените</button>
        <a asp-action="Index">Назад към списъка</a>
    </div>
</form>