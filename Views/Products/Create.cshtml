@model OnlineStore.Models.Product

<h1>Добави нов продукт</h1>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Create" method="post">
    <div>
        <label asp-for="Name">Име:</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Description">Описание:</label>
        <input asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Price">Цена:</label>
        <input asp-for="Price" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="CategoryId">Категория:</label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
            <option value="">-- Изберете категория --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>


    <div>
        <button type="submit">Запази</button>
        <a asp-action="Index">Назад към списъка</a>
    </div>
</form>
