@model IEnumerable<OnlineStore.Models.Product>

<h1 class="mb-4 text-center">Каталог</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <img src="@(!string.IsNullOrEmpty(item.ImageUrl) ? item.ImageUrl : Url.Content("~/images/default-image.jpg"))" class="card-img-top" alt="Изображение на продукта">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text text-muted">@item.Description</p>
                    <p class="card-text fw-bold">@item.Price лв.</p>
                    <span class="badge bg-secondary">@item.Category?.Name</span>
                </div>
            </div>
        </div>
    }
</div>
